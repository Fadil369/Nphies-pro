# Production Environment Configuration for NPHIES Platform

# Database
DATABASE_URL="file:./prod.db"

# Authentication
JWT_SECRET="your-super-secure-jwt-secret-here"

# OpenAI API (for AI agent)
OPENAI_API_KEY="your-openai-api-key-here"

# Application URLs
NEXT_PUBLIC_API_URL="https://api.nphies-pro.brainsait.com"
NEXT_PUBLIC_APP_URL="https://nphies-pro.brainsait.com"

# Saudi Arabia specific
NPHIES_ENDPOINT="https://nphies.sa/api/v1"
NPHIES_CLIENT_ID="your-nphies-client-id"
NPHIES_CLIENT_SECRET="your-nphies-client-secret"

# Monitoring and Logging
LOG_LEVEL="info"
SENTRY_DSN="your-sentry-dsn-here"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="noreply@brainsait.com"
SMTP_PASS="your-smtp-password"

# Redis
REDIS_URL="redis://redis:6379"

# Security
CORS_ORIGIN="https://nphies-pro.brainsait.com"
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"
